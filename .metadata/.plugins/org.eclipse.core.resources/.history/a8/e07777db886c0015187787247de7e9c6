	}

	@Override
	public void update(CEP t) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void delete(CEP t) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public List<CEP> findAll() {
		// TODO Auto-generated method stub
		return null;
	}

}
